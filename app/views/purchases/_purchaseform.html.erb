<%= form_with model: @purchase do |form| %>
  <%= @vendors.count %>
  <div>
  <%= form.collection_select :vendor_id, @vendors, :id, :name %>
    <%# <%= form.select :vendor_id, :"Select Vendor" => true%> 
    <%= form.text_field :item_id,:readonly => true, value: @item.id %>
  </div>
  <div class="form-group">
    <%= form.label :quantity %><br>
    <%= form.text_field :purchase_quantity, class: "form-control" %>
  </div>

    <div class="form-group">
    <%= form.text_field :cost_price, class: "form-control" %>
  </div>

    <div class="form-group">
    <%= form.label :total %><br>
    <%= form.text_field :total_price, class: "form-control" %>
    <% @purchase.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>


  <div>
    <%= form.submit %>
  </div>
<% end %>