<%= form_with model: @purchases do |form| %>
  <%= form.text_field :@vendor_id ,:readonly => true%>
  <%= form.text_field :@item_id ,:readonly => true%>

  <div class="form-group">
    <%= form.label :quantity %><br>
    <%= form.text_field :purchase_quantity, class: "form-control" %>
  </div>

    <div class="form-group">
    <%= form.label :cost_price %><br>
    <%= form.text_field :cost_price, class: "form-control" %>
  </div>

    <div class="form-group">
    <%= form.label :total %><br>
    <%= form.text_field :total_price, class: "form-control" %>
    <% @purchase.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>


  <div>
    <%= form.submit %>
  </div>
<% end %>